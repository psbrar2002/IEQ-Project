<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AcousticComfortActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- RelativeLayout to position elements at the top -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Survey ID TextView positioned at the top right -->
            <TextView
                android:id="@+id/surveyIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:text="Survey ID: "
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />


        </RelativeLayout>
        <!-- Hyperlink TextView for IEQ Survey Instructions -->
        <TextView
            android:id="@+id/openInstructionsStoreLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/surveyIdTextView"
            android:layout_marginTop="8dp"
            android:text="IEQ Survey Instructions"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:autoLink="web"
            android:textSize="16sp"
            android:linksClickable="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Acoustic Comfort Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IEQ: Acoustic Comfort"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Indoor Decibel Reading -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indoor Decibel Reading (add number only)"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/indoorDecibelEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Indoor Decibel Reading"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- List the sources of noise you hear indoors -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List the sources of noise you hear indoors"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/indoorNoiseSourcesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter sources of noise indoors"
                    android:inputType="text" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Outdoor Decibel Reading -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outdoor Decibel Reading (add number only)"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/outdoorDecibelEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Outdoor Decibel Reading"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- List the sources of noise you hear outdoors -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List the sources of noise you hear outdoors"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/outdoorNoiseSourcesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter sources of noise outdoors"
                    android:inputType="text" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Acoustic Comfort Score -->
        <TextView
            android:id="@+id/acousticComfortScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acoustic Comfort Score: 0.0"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <!-- IEQ Score -->
        <TextView
            android:id="@+id/ieqScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IEQ Score: 0.0"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/exitButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

        </LinearLayout>
        <!-- Progress Bar at the bottom -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="83"
            android:max="100"/>

        <!-- Page Counter at the bottom -->
        <TextView
            android:id="@+id/pageCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="Page 5 of 6"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
