<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThermalComfortActivity">

    <!-- Fixed Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- RelativeLayout to position elements at the top -->
        <!-- RelativeLayout to position elements at the top -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <!-- Exit Button positioned at the top left -->
            <ImageButton
                android:id="@+id/exitButtonWithIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/exit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@android:color/holo_red_dark" />

            <!-- LinearLayout to hold IEQ Score and HVAC Score -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">

                <!-- IEQ Score -->
                <TextView
                    android:id="@+id/ieqScoreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IEQ Score: 0%"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18sp" />

                <!-- HVAC Score positioned below IEQ Score -->
                <TextView
                    android:id="@+id/thermalComfortScoreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thermal Comfort Score: 0"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp" /> <!-- Add margin for spacing -->

            </LinearLayout>

            <!-- Survey ID TextView positioned at the top right -->
            <TextView
                android:id="@+id/surveyIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:text="Survey ID: "
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Hyperlink TextView for IEQ Survey Instructions -->
        <TextView
            android:id="@+id/openInstructionsStoreLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="IEQ Survey Instructions"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:autoLink="web"
            android:textSize="16sp"
            android:linksClickable="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Thermal Comfort Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IEQ: Thermal Comfort"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Scrollable Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Indoor Temperature -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indoor Temperature (degrees Fahrenheit - enter number only)"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/indoorTempEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Indoor Temperature"
                        android:inputType="numberDecimal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Outdoor Temperature -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outdoor Temperature (degrees Fahrenheit - enter number only)"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/outdoorTempEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Outdoor Temperature"
                        android:inputType="numberDecimal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Thermal Comfort Score -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="66"
                    android:max="100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/pageCounter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Page Counter TextView -->
                <TextView
                    android:id="@+id/pageCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 of 6"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:layout_gravity="center_horizontal">


                <Button
                    android:id="@+id/backButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
